<!--circular:是否采用衔接滑动
duration:滑动动画时长
indicator-active-color:当前选中指示点的颜色
indicator-dots:是否显示面板指示点-->
<swiper circular="true" autoplay="true" interval="3000" indicator-dots="true" duration="300"
indicator-active-color="#ff5777">
<block wx:for="{{list}}" wx:key="{{index}}">
<swiper-item class="swiper-item">
<image src="{{item.image}}" mode="widthFix"/>
</swiper-item>
</block>
</swiper>
